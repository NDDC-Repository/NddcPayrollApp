    //    PayrollList = await Task.Run(() => db.GetPayrollListReport());

    //}

    private async Task GenerateReport()
    {
        Message = "Loading Report Please Wait ........";
        PayrollList = await Task.Run(() => db.GetPayrollListReport());
        //Message = "";
    }
}
