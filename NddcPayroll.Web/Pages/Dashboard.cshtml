<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">Employees With Contracts Due To Expire</h4>


            </div><!-- end card header -->

            <div class="card-body">

                <div class="live-preview">
                    <div class="table-responsive table-card">
                        <table class="table align-middle table-nowrap mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col">S/N</th>
                                    <th scope="col">Code</th>
                                    <th scope="col">Full Name</th>
                                    <th scope="col">Gender</th>
                                    <th scope="col">Grade Level</th>
                                    <th scope="col">Category</th>
                                    <th scope="col">Department</th>
                                    <th scope="col">DateEngaged</th>
                                    <th scope="col" class="bg-warning">Expiring Date</th>
                                    <th scope="col" style="width: 150px;">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ContractEmployees)
                                {
                                    <tr>
                                        <td>@item.SrNo</td>
                                        <td><a href="#" class="fw-medium">@item.EmployeeCode</a></td>
                                        <td>@item.FullName</td>
                                        <td>@item.Gender</td>
                                        <td>@item.GradeLevel</td>
                                        <td>@item.Category</td>
                                        <td>@item.DepartmentName</td>
                                        <td>@item.DateEngaged.ToShortDateString()</td>
                                        <td class="bg-warning">@item.ContExpiringDate.ToShortDateString()</td>
                                        <td>
                                            <a asp-page="EmployeeDetails" asp-route-EmpID="@item.Id" class="btn btn-sm btn-light">Details</a>
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>

            </div><!-- end card-body -->
        </div><!-- end card -->
    </div><!-- end col -->
</div>
