@page
@model NddcPayroll.Web.Pages.Employee.EmployeesModel
@{
    ViewData["Title"] = "Employees";
    ViewData["Employees"] = "active";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Employees</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Employee</a></li>
                    <li class="breadcrumb-item active">Employees</li>
                </ol>
            </div>

        </div>
    </div>
</div>

<div class="row mb-3 pb-1">
    <div class="col-12">
        <div class="d-flex align-items-lg-center flex-lg-row flex-column">
            <div class="flex-grow-1">
                <div class="col-md-6">
                    <div class="input-group">
                        <input type="text" class="form-control" aria-label="Recipient's username" aria-describedby="button-addon2">
                        <button class="btn btn-outline-success" type="button" id="button-addon2">Search Employee</button>
                    </div>
                </div>
            </div>
            <div class="mt-3 mt-lg-0">
                <div class="col-auto">
                    <a asp-page="AddEmployee" class="btn btn-primary">
                        <i class="ri-add-circle-line align-middle me-1"></i>
                        Add Employee
                    </a>
                </div>

            </div>
        </div><!-- end card header -->
    </div>
    <!--end col-->
</div>

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">Recently Created Employees</h4>


            </div><!-- end card header -->

            <div class="card-body">

                <div class="live-preview">
                    <div class="table-responsive table-card">
                        <table class="table align-middle table-nowrap table-striped-columns mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col">S/N</th>
                                    <th scope="col">Code</th>
                                    <th scope="col">Full Name</th>
                                    <th scope="col">Gender</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Grade Level</th>
                                    <th scope="col">Department</th>
                                    <th scope="col">JobTitle</th>
                                    <th scope="col">Phone</th>
                                    <th scope="col" style="width: 150px;">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Employees)
                                {
                                    <tr>
                                        <td>@item.SrNo</td>
                                        <td><a href="#" class="fw-medium">@item.EmployeeCode</a></td>
                                        <td>@item.FullName</td>
                                        <td>@item.Gender</td>
                                        <td>@item.Email</td>
                                        <td>@item.GradeLevel</td>
                                        <td>@item.DepartmentName</td>
                                        <td>@item.Description</td>
                                        <td>@item.Phone</td>
                                        <td>
                                            <button type="button" class="btn btn-sm btn-light">Details</button>
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>

            </div><!-- end card-body -->
        </div><!-- end card -->
    </div><!-- end col -->
</div>
