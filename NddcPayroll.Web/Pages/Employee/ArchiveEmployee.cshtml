@page "{EmpId:int?}"
@model NddcPayroll.Web.Pages.Employee.ArchiveEmployeeModel
@{
}

<div class="row">
    <div class="col-xl-6">
        <div class="card overflow-hidden">
            <div class="card-body bg-marketplace d-flex">
                <div class="flex-grow-1">
                    <h4 class="fs-18 lh-base mb-0">Archive @Model.EmpName <br></h4>
                    <p class="mb-0 mt-2 pt-1 text-muted">
                        You are about to Archive the Payroll Records of @Model.EmpName.<br />
                        This action would remove the employee from Payroll Listings,<br />
                        as well as recurrent Payroll Reports.
                    </p>
                    <div class="d-flex gap-3 mt-4">
                        <form method="post">
                            <button type="submit" class="btn btn-warning">Continue to Archive</button>
                            <a asp-page="Employees" class="btn btn-primary">Cancel</a>
                        </form>
                    </div>
                </div>
                <img src="assets/images/bg-d.png" alt="" class="img-fluid">
            </div>
        </div>
    </div><!--end col-->

</div>