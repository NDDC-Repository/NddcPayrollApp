            </div>*@<!-- end card header -->

            <div class="card-body">
                
                <div class="live-preview">
                    <form method="post">
                    <div class="row">
                    <div class="col-md-6">
                    <div class="card">
                        <div class="card-header align-items-center d-flex">
                            <h4 class="card-title mb-0 flex-grow-1">Personal Details</h4>
                        </div><!-- end card header -->
                        <div class="card-body">
                             <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="@Model.Employee.EmployeeCode" class="form-label">Employee Code</label>
                                    <input asp-for="@Model.Employee.EmployeeCode" class="form-control" placeholder="Enter Code">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="@Model.Employee.Gender" class="form-label">Gender</label>
                                    <select asp-for="@Model.Employee.Gender" class="form-select" data-choices="" data-choices-sorting="true">
                                        <option selected="">Choose...</option>
                                        <option>Male</option>
                                        <option>Female</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="@Model.Employee.MaritalStatus" class="form-label">Marital Status</label>
                                    <select asp-for="@Model.Employee.MaritalStatus" class="form-select" data-choices="" data-choices-sorting="true">
                                        <option selected="">Choose...</option>
                                        <option>Married</option>
                                        <option>Single</option>
                                        <option>Divorced</option>
                                        <option>Widower</option>
                                    </select>
                                </div>
                            </div>

                        </div>
                        <div class="row">

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="@Model.Employee.FirstName" class="form-label">First Name</label>
                                    <input asp-for="@Model.Employee.FirstName" class="form-control" placeholder="Enter First Name" id="firstNameinput">
                                </div>
                            </div>
                            <!--end col-->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="@Model.Employee.LastName" class="form-label">Last Name</label>
                                    <input asp-for="@Model.Employee.LastName" class="form-control" placeholder="Enter your lastname" id="lastNameinput">
                                </div>
                            </div>
                            <!--end col-->
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label asp-for="@Model.Employee.OtherNames" class="form-label">Other Names</label>
                                    <input asp-for="@Model.Employee.OtherNames" class="form-control" placeholder="Enter other name" id="compnayNameinput">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label asp-for="@Model.Employee.MaidenName" class="form-label">Maiden Name</label>
                                    <input asp-for="@Model.Employee.MaidenName" class="form-control" placeholder="Enter Maiden name" id="compnayNameinput">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label asp-for="@Model.Employee.SpouseName" class="form-label">Spouse Name</label>
                                    <input asp-for="@Model.Employee.SpouseName" class="form-control" placeholder="Enter Spouse Name" id="compnayNameinput">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label asp-for="@Model.Employee.Email" class="form-label">Email Address</label>
                                    <input asp-for="@Model.Employee.Email" class="form-control" placeholder="example@gamil.com" id="emailidInput">
                                </div>
                            </div>
                            <!--end col-->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="@Model.Employee.Phone" class="form-label">Phone Number</label>
                                    <input asp-for="@Model.Employee.Phone" class="form-control" placeholder="+(245) 451 45123" id="phonenumberInput">
                                </div>
                            </div>
                            <!--end col-->
                           
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="@Model.Employee.DateOfBirth" class="form-label">Date of Birth</label>
                                    <!-- Input Date -->
                                    <div>
                                        <input type="date" asp-for="@Model.Employee.DateOfBirth" class="form-control" id="exampleInputdate">
                                    </div>
                                </div>
                            </div>
                            <!--end col-->
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label asp-for="@Model.Employee.Address" class="form-label">Address</label>
                                    <input asp-for="@Model.Employee.Address" class="form-control" placeholder="Address 1" id="address1ControlTextarea">
                                </div>
                            </div>
                            <!--end col-->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="@Model.Employee.City" class="form-label">City</label>
                                    <input asp-for="@Model.Employee.City" class="form-control" placeholder="Enter your city" id="citynameInput">
                                </div>
                            </div>
                            <!--end col-->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="@Model.Employee.SID" class="form-label">State</label>
                                    <select class="form-select" asp-for="@Model.Employee.SID" asp-items="@(new SelectList(Model.States, "Id", "FullDescription"))">
                                        <option selected="">Choose...</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <div>
                                        <label asp-for="@Model.Employee.Passport" class="form-label">Passport Photograph</label>
                                        <input asp-for="@Model.Employee.Passport" class="form-control" type="file" id="formFile">
                                    </div>
                                </div>
                            </div>
                            <!--end col-->
                            @*<div class="col-lg-12">
                            <div class="text-end">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                            </div>*@
                            <!--end col-->
                        </div>
                        </div>
                    </div>
                       
                    </div>
                        <!--end row-->
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header align-items-center d-flex">
                                    <h4 class="card-title mb-0 flex-grow-1">Emergency Contact Details</h4>

                                </div><!-- end card header -->

                                <div class="card-body">

                                    <div class="live-preview">
                                        <div class="row">

                                            <div class="col-md-12">
                                                <div class="mb-3">
                                                    <label asp-for="@Model.Employee.ContactName" class="form-label">Name and Surname</label>
                                                    <input asp-for="@Model.Employee.ContactName" class="form-control" placeholder="Enter Full Name" id="firstNameinput">
                                                </div>
                                            </div>
                                            <!--end col-->
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label asp-for="@Model.Employee.ContactPhone" class="form-label">Phone Number</label>
                                                    <input asp-for="@Model.Employee.ContactPhone" class="form-control" placeholder="Enter Personal Cell Number" id="lastNameinput">
                                                </div>
                                            </div>
                                            <!--end col-->
                                            <!--end col-->
                                            <!--end col-->
                                            @*<div class="col-lg-12">
                                            <div class="text-end">
                                            <button type="submit" class="btn btn-primary">Submit</button>
                                            </div>
                                            </div>*@
                                            <!--end col-->
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div> <!-- end col -->

                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header align-items-center d-flex">
                                    <h4 class="card-title mb-0 flex-grow-1">Service Details</h4>

                                </div><!-- end card header -->

                                <div class="card-body">

                                    <div class="live-preview">
                                        <div class="row">

                                            <div class="col-md-12">
                                                <div class="mb-3">
                                                    <label asp-for="@Model.Employee.EmploymentStatus" class="form-label">Employment Status</label>
                                                    <select id="ForminputState" asp-for="@Model.Employee.EmploymentStatus" class="form-select" data-choices="" data-choices-sorting="true">
                                                        <option selected="">Choose...</option>
                                                        <option>New</option>
                                                        <option>Old</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <!--end col-->
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label asp-for="@Model.Employee.DateEngaged" class="form-label">Date Engaged</label>
                                                    <div>
                                                        <input type="date" asp-for="@Model.Employee.DateEngaged" class="form-control" id="exampleInputdate">
                                                    </div>
                                                </div>
                                            </div>

                                            <!--end col-->
                                            @*<div class="col-lg-12">
                                            <div class="text-end">
                                            <button type="submit" class="btn btn-primary">Submit</button>
                                            </div>
                                            </div>*@
                                            <!--end col-->
                                        </div>
                                        <!--end row-->
                                    </div>

                                </div>
                            </div>
                        </div> <!-- end col -->


                        <div class="row">
                            <div class="col-lg-12">
                                <div class="d-flex align-items-start gap-3 mt-4 mb-4">
                                    @*<a href="StatutoryDetails" class="btn btn-success btn-label right ms-auto nexttab nexttab"><i class="ri-arrow-right-line label-icon align-middle fs-16 ms-2"></i>Save and Continue</a>*@
                                    <button type="submit" class="btn btn-success btn-label right ms-auto nexttab nexttab">
                                        <i class="ri-arrow-right-line label-icon align-middle fs-16 ms-2"></i>
                                        Save and Continue
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    </form>
                </div>

            </div>
        </div>
    </div> <!-- end col -->

    
    <br /><br />
</div>

