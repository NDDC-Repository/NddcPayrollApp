@page
@model NddcPayroll.Web.Pages.Payroll.SalaryScaleModel
@{
    
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Benefits - Salary Scale</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Payroll</a></li>
                    <li class="breadcrumb-item active">Salary Scale</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="row mb-3 pb-1">
    <div class="col-12">
        <div class="d-flex align-items-lg-center flex-lg-row flex-column">
            <div class="flex-grow-1">
                <h3 class="fs-22 mb-1">NDDC Approved Salary Scale</h3>
                @*<p class="text-muted mb-0">
                    List of Approved Salary Scale 
                </p>*@
            </div>
            <div class="mt-3 mt-lg-0">
                <div class="col-auto">
                    <a asp-page="AddSalaryScale" class="btn btn-primary">
                        <i class="ri-add-circle-line align-middle me-1"></i>
                        Create Salary Scale
                    </a>
                </div>
                
            </div>
        </div><!-- end card header -->
    </div>
    <!--end col-->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <!-- Tables Without Borders -->
                <table class="table table-striped table-nowrap ">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Grade Level</th>
                            <th scope="col">Employee Category</th>
                            <th scope="col">Basic Salary</th>
                            <th scope="col">Status</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.SalaryScales)
                        {
                            
                            <tr>
                                <th scope="row">@item.SrNo</th>
                                <td>@item.GradeLevel</td>
                                <td>@item.Category</td>
                                <td>@item.BasicSalary</td>
                                <td><span class="badge badge-soft-success">Active</span></td>
                                <td>
                                    @*<div class="hstack gap-3 fs-15">
                                        <a href="javascript:void(0);"><i class="ri-settings-4-line"></i></a>
                                        <a href="javascript:void(0);" class="link-success"><i class="ri-delete-bin-5-line"></i></a>
                                    </div>*@
                                    <a class="btn btn-sm btn-light" asp-page="ViewBenefits" asp-route-salaryScaleId="@item.Id" >View Benefits</a>
                                </td>
                            </tr>
                        }    
                       
                       
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!--end col-->
</div>