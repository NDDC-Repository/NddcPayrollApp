@page
@model NddcPayroll.Web.Pages.Company.AddBankModel
@{
    ViewData["Title"] = "Banks";
    ViewData["Banks"] = "active";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Add Bank</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Company</a></li>
                    <li class="breadcrumb-item active">Add Bank</li>
                </ol>
            </div>

        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">New Bank</h4>
            </div><!-- end card header -->
            <div class="card-body">
                <form method="post">
                    <div class="row mb-3">
                        <div class="col-lg-3">
                            <label asp-for="@Model.Bank.Code" class="form-label">Code</label>
                        </div>

                        <div class="col-lg-9">
                            <input class="form-control" asp-for="@Model.Bank.Code" placeholder="Enter Code">
                        </div>
                    </div>


                    <div class="row mb-3">
                        <div class="col-lg-3">
                            <label  asp-for="@Model.Bank.BankName" class="form-label">Bank Name</label>
                        </div>
                        <div class="col-lg-9">
                            <input class="form-control" placeholder="Enter Bank Name" asp-for="@Model.Bank.BankName">
                        </div>
                    </div>
                     <div class="row mb-3">
                        <div class="col-lg-3">
                            <label  asp-for="@Model.Bank.Branch" class="form-label">Branch Name</label>
                        </div>
                        <div class="col-lg-9">
                            <input class="form-control" placeholder="Enter Branch Name" asp-for="@Model.Bank.Branch">
                        </div>
                    </div>
                    <div class="text-end">
                        <button type="submit" class="btn btn-primary">Add Bank</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!--end col-->
</div>