@page
@model NddcPayroll.Web.Pages.Company.AddDepartmentModel
@{
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Department</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Company</a></li>
                    <li class="breadcrumb-item active">Add New Department</li>
                </ol>
            </div>

        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">New Department</h4>
            </div><!-- end card header -->
            <div class="card-body">
                <form method="post">
                    <div class="row mb-3">
                        <div class="col-lg-3">
                            <label asp-for="@Model.Department.Code" class="form-label">Code</label>
                        </div>

                        <div class="col-lg-9">
                            <input class="form-control" asp-for="@Model.Department.Code" placeholder="Enter Code">
                        </div>
                    </div>
                   

                    <div class="row mb-3">
                        <div class="col-lg-3">
                            <label asp-for="@Model.Department.DepartmentName" class="form-label">Department Name</label>
                        </div>
                        <div class="col-lg-9">
                            <input class="form-control" placeholder="Enter Department Name" asp-for="@Model.Department.DepartmentName">
                        </div>
                    </div>
                    <div class="text-end">
                        <button type="submit" class="btn btn-primary">Add Department</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!--end col-->
</div>