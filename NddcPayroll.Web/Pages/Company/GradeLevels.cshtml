@page
@model NddcPayroll.Web.Pages.Company.GradeLevelsModel
@{
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Grade Levels</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Company</a></li>
                    <li class="breadcrumb-item active">Grade Level</li>
                </ol>
            </div>

        </div>
    </div>
</div>

<div class="row mb-3 pb-1">
    <div class="col-12">
        <div class="d-flex align-items-lg-center flex-lg-row flex-column">
            <div class="flex-grow-1">
                <h3 class="fs-22 mb-1">Listed Grade Levels </h3>
                @*<p class="text-muted mb-0">
                List of Approved Salary Scale
                </p>*@
            </div>
            <div class="mt-3 mt-lg-0">
                <div class="col-auto">
                    <a asp-page="AddGradeLevel" class="btn btn-primary">
                        <i class="ri-add-circle-line align-middle me-1"></i>
                        Add Grade Level
                    </a>
                </div>

            </div>
        </div><!-- end card header -->
    </div>
    <!--end col-->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <!-- Tables Without Borders -->
                <table class="table table-striped table-nowrap ">
                    <thead>
                        <tr>
                            <th scope="col">SrNo</th>
                            <th scope="col">Grade Level</th>
                            <th scope="col">Description</th>
                            <th scope="col">Basic Salary</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.GradeLevels)
                        {
                            <tr>
                                <th scope="row">@item.SrNo</th>
                                <td>@item.GradeLevel</td>
                                <td>@item.Description</td>
                                <td>@item.BasicSalary</td>
                                <td>
                                    <a class="btn btn-sm btn-light" asp-page="Benefits" asp-route-salaryScaleId="@item.Id">Edit</a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!--end col-->
</div>