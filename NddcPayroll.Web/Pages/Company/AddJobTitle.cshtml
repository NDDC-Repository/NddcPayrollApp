@page
@model NddcPayroll.Web.Pages.Company.AddJobTitleModel
@{
    ViewData["Title"] = "Job Titles";
    ViewData["JobTitles"] = "active";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Job Title</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Job Title</a></li>
                    <li class="breadcrumb-item active">Add New Job Title</li>
                </ol>
            </div>

        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">New Job Title</h4>
            </div><!-- end card header -->
            <div class="card-body">
                <form method="post">
                    <div class="row mb-3">
                        <div class="col-lg-3">
                            <label asp-for="@Model.JobTitle.Code" class="form-label">Code</label>
                        </div>
                       
                        <div class="col-lg-9">
                            <input class="form-control" asp-for="@Model.JobTitle.Code" placeholder="Enter Code">
                        </div>
                    </div>
                    @*<div class="row mb-3">
                        <div class="col-lg-3">
                            <label for="nameInput" class="form-label">Category</label>
                        </div>
                        <div class="col-lg-9">
                            <div class="col-md-12">
                                <div class="mb-3">

                                    <select class="form-select" asp-for="@Model.SalaryScale.Category" asp-items="@Model.Categories">
                                        <option selected="">Choose...</option>

                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>*@

                    <div class="row mb-3">
                        <div class="col-lg-3">
                            <label asp-for="@Model.JobTitle.Description" class="form-label">Job Title</label>
                        </div>
                        <div class="col-lg-9">
                            <input class="form-control" placeholder="Enter Job Title Description" asp-for="@Model.JobTitle.Description">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-lg-3">
                            <label asp-for="@Model.JobTitle.Abbreviation" class="form-label">Abbreviation</label>
                        </div>
                        <div class="col-lg-9">
                            <input class="form-control" placeholder="Enter Job Title Abbreviation" asp-for="@Model.JobTitle.Abbreviation">
                        </div>
                    </div>
                    <div class="text-end">
                        <button type="submit" class="btn btn-primary">Add Job Title</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!--end col-->
</div>